{
  "name": "vrchat-osc-keyboard",
  "productName": "VRChat OSC Keyboard",
  "version": "1.0.1",
  "description": "A virtual keyboard for sending text to VRChat via OSC",
  "author": "User",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env IS_ELECTRON=true vite\" \"wait-on tcp:5173 && electron .\"",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "lucide-react": "^0.344.0",
    "node-osc": "^9.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.vrchat.osc.keyboard",
    "productName": "VRChat OSC Keyboard",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
