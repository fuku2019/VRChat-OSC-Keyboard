{
  "name": "vrchat-osc-keyboard",
  "productName": "VRChat OSC Keyboard",
  "version": "v1.1.1",
  "description": "A Japanese/English virtual keyboard and chatbox interface designed for SteamVR overlays to send text to VRChat via OSC.",
  "author": {
    "name": "fuku_2019"
  },
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env IS_ELECTRON=true vite\" \"wait-on tcp:5173 && electron .\"",
    "dist": "vite build && electron-builder && node scripts/rename-build-output.js"
  },
  "dependencies": {
    "node-osc": "^11.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/ws": "^8.5.14",
    "@tailwindcss/vite": "^4.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "lucide-react": "^0.562.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.0"
  },
  "overrides": {
    "glob": "^10.4.5",
    "rimraf": "^6.0.1",
    "tar": "^7.5.4"
  },
  "build": {
    "npmRebuild": false,
    "afterPack": "./scripts/removeLocales.cjs",
    "publish": null,
    "appId": "com.vrchat.osc.keyboard",
    "productName": "VRChat OSC Keyboard",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "legalTrademarks": "VRChat OSC Keyboard",
      "executableName": "VRChat-OSC-Keyboard",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
